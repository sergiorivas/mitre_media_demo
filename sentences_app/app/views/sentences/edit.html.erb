<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing sentence</h1>

  <%= render @sentence %>

  <h2 class="font-bold text-2xl">Parts</h2>
  <ul>
    <% @sentence.sentence_parts.each do |sentence_part|%>
      <li class="my-5 flex justify-between items-center">
        <div>
          <%= sentence_part.text  %>
        </div>
        <div>
            <%= form_with(model: sentence_part, class: "contents") do |form| %>
              <div class="inline-block ml-2">
                <%= form.text_field :entity_type_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"%>
              </div>
              <div class="inline-block ml-2">
                <%= form.submit 'Set as an entitty', class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
              </div>
            <% end %>
        </div>
      </li>
    <% end %>
  </ul>

  <%= link_to "⬅️ Back to sentences", sentences_path, class: "mt-5 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
