<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block w-full text-center" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Sentences</h1>
    <%= link_to '📝 New', new_sentence_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium transition ease-in-out hover:-translate-y-1 hover:scale-110" %>
  </div>

  <div id="sentences" class="min-w-full my-4">
    <%= render @sentences %>
  </div>
</div>
